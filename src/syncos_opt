#

if [[ $# == 0 ]]
then
    printf "Usage: syncos --flag [argument_1] [argument_2]";

elif [[ $1 == "--add" ]]
then
    ./syncos "$2" "$3"

elif [[ $1 == "--list" ]]
then
    
fi
